<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:background="#A31C0C"><EditText android:text="@+id/EditText01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtBoxTo" android:layout_toRightOf="@+id/lblTo" android:layout_toLeftOf="@+id/btnResetRecievers"></EditText>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lblTo" android:text="To:" android:textSize="30sp" android:layout_marginTop="5px"></TextView><EditText android:text="@+id/EditText01" android:layout_height="wrap_content" android:layout_below="@+id/lblTo" android:id="@+id/txtBoxMessage" android:layout_width="fill_parent" android:layout_marginTop="10px" android:minLines="8"></EditText><Button android:layout_height="wrap_content" android:layout_below="@+id/txtBoxMessage" android:layout_width="wrap_content" android:layout_alignParentBottom="true" android:text="Cancel" android:id="@+id/btnCancelSMS"></Button><Button android:layout_height="wrap_content" android:layout_below="@+id/txtBoxMessage" android:layout_width="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:text="Send SMS" android:id="@+id/btnSendSMS"></Button><Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Contacts" android:id="@+id/btnContacts" android:layout_alignParentTop="true" android:layout_alignParentRight="true"></Button>
