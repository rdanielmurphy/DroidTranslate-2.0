<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:background="#A31C0C"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Go" android:id="@+id/btnGoSpeechToSpeech" android:layout_below="@+id/cmbBoxSpeechToSpeechLang" android:layout_centerInParent="true" android:layout_marginTop="25px"></Button>
