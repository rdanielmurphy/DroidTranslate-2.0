<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txtViewTranslatedSpeech" android:layout_alignParentBottom="true" android:text="Translated Speech" android:layout_alignParentRight="true" android:layout_marginBottom="10px" android:layout_marginLeft="10px"></TextView>


</RelativeLayout>
